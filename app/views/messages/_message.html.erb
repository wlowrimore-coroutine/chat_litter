<div id="<%= dom_id message %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= message.content %> by <%= message.user.email %> on <%= message.created_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "show message", message, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'edit message', edit_message_path(message), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
